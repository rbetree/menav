{{!-- articles.hbs - 文章页面：Phase 1 扁平化展示站点入口；Phase 2 将优先渲染 articlesItems --}}
<div class="page-template page-template-articles">
    {{> page-header}}
    <div class="flat-sites-grid">
        {{#if articlesItems.length}}
            {{#each articlesItems}}
                {{> site-card type="article" style=@root.siteCardStyle}}
            {{/each}}
        {{else}}
            {{#each flatCategories}}
                {{> flat-category}}
            {{/each}}
        {{/if}}
    </div>
    {{!-- Phase 2：保留扩展可写回结构（隐藏），避免文章条目卡片影响 DOM → IR → YAML --}}
    {{#if articlesItems.length}}
        <div class="menav-extension-shadow" data-extension-shadow="true" data-search-exclude="true" aria-hidden="true">
            {{#each flatCategories}}
                {{> flat-category}}
            {{/each}}
        </div>
    {{/if}}
</div>
